//SignalRatio.C


void SignalRatio() {
 // open a file and get a histogram
 TFile *b1 = new TFile("/nfs/dust/cms/user/multh/RunII_76X_v1/Selection/TopTag/uhh2.AnalysisModuleRunner.MC.TTbar.root");
 TFile *b2 = new TFile("/nfs/dust/cms/user/multh/RunII_76X_v1/Selection/TopTag/uhh2.AnalysisModuleRunner.MC.WJets.root");
 TFile *b3 = new TFile("/nfs/dust/cms/user/multh/RunII_76X_v1/Selection/TopTag/uhh2.AnalysisModuleRunner.MC.ZJets.root");
 TFile *b4 = new TFile("/nfs/dust/cms/user/multh/RunII_76X_v1/Selection/TopTag/uhh2.AnalysisModuleRunner.MC.QCD.root");
 TFile *b5 = new TFile("/nfs/dust/cms/user/multh/RunII_76X_v1/Selection/TopTag/uhh2.AnalysisModuleRunner.MC.SingleTop.root");
 TFile *b6 = new TFile("/nfs/dust/cms/user/multh/RunII_76X_v1/Selection/TopTag/uhh2.AnalysisModuleRunner.MC.Diboson.root");
 TFile *s1 = new TFile("/nfs/dust/cms/user/multh/RunII_76X_v1/Selection/TopTag/uhh2.AnalysisModuleRunner.MC.Tstar_M700.root");
 
 TH1F *h_b1    = (TH1F*)b1->Get("twodcut_Jets/pt_1");
 TH1F *h_b2    = (TH1F*)b2->Get("twodcut_Jets/pt_1");
 TH1F *h_b3    = (TH1F*)b3->Get("twodcut_Jets/pt_1");
 TH1F *h_b4    = (TH1F*)b4->Get("twodcut_Jets/pt_1");
 TH1F *h_b5    = (TH1F*)b5->Get("twodcut_Jets/pt_1");
 TH1F *h_b6    = (TH1F*)b6->Get("twodcut_Jets/pt_1");
 TH1F *h_s1    = (TH1F*)s1->Get("twodcut_Jets/pt_1");


 TH1F* histos[6]={h_b1,h_b2,h_b3,h_b4,h_b5,h_b6};
for (int i=0;i<6;++i){
         histos[i]->Sumw2(); // *Very* Important
        }
 std::cout<<"Test1"<<endl;
 h_s1->Sumw2();

 TH1F *hSum = new TH1F(*h_b1);

 for (int i=0;i<4;++i){
  hSum->Add(histos[i+1],histos[i+2],1,1);

        }
 TH1F *Ratio = new TH1F(*h_s1);
 Ratio->Divide(hSum);

 Ratio->Draw();

}
