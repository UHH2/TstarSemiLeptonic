//Ratio.C

void Ratio() {
 // open a file and get a histogram
 TFile *f = new TFile("/nfs/dust/cms/user/multh/RunII_25ns_v1/TstarSelection/uhh2.AnalysisModuleRunner.MC.TTbar.root");

 TFile *s = new TFile("/nfs/dust/cms/user/multh/RunII_25ns_v1/TstarSelection/uhh2.AnalysisModuleRunner.MC.Tstar_M700.root");

 TH1F *Background = (TH1F*)b->Get("output_Jets/pt_2");

 TH1F *Signal     = (TH1F*)s->Get("output_Jets/pt_2");

 Double_t num_bins = f->GetSize();
 cout<<"Num Bins: "<<num_bins<<endl;

 TH1F *h_Ratio      = new TH1F("Ratio", "Ratio",50,0,1500);

 for(num_bins > 0){
   Double_t num_sig = num_sig + s->GetBin(num_bins);
   Double_t num_back = num_back + b->GetBin(num_bins);

   Double_t Ratio = num_sig/sqrt(num_back);
   cout<<"Ratio"<<Ratio<<endl;
   h_Ratio->Fill(Ratio);

   num_bins = num_bins - 1;
}

 h_Ratio->Draw();
}
